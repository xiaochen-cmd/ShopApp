<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.longIt.shoppingApp.mapper.OrderItemMapper">

       <select id="getOrderItemById" resultMap="ItemMapping">
            select * from ec_order_item where order_id = #{id}
       </select>
       
       <resultMap type="com.longIt.shoppingApp.bean.OrderItem" id="ItemMapping">
            <result column="order_num" property="orderNum"/>
            <!-- 根据商品id获取商品信息 -->
            <association property="article" column="article_id"  select="com.longIt.shoppingApp.mapper.ArticleMapper.getArticleById"></association>
       </resultMap>
</mapper>